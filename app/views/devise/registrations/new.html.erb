<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: 'flow-text' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'flow-text' %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'flow-text' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :name, class: 'flow-text' %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :about, "About yourself", class: 'flow-text' %><br />
    <%= f.text_area :about, class: 'materialize-textarea' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn' %>
  </div>
<% end %>
